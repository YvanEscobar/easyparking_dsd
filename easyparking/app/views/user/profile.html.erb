
<div class="container block-margin">
	<div class="main">
		<div class="row">
			
			<div class="col-lg-4 profile">
		 	  <div class="form-account">
        
        	<div class="form-heading">
        		<h3>Perfil de usuario</h3>
        	</div>
          
        	<div class="form-entry clearfix">
        		
      			<p>
      				<label> Nombre: </label>
			        <%= @user.name %>
      			</p>
      			
      			<p>
      				<label> E-mail: </label>
			        <%= @user.email %>
      			</p>
      			
      			<p>
      				<label> Teléfono: </label>
			        <%= @user.phone %>
      			</p>
      			
      			<p>
      			  <label> Dirección: </label>
			        <%= @user.address %>
      			</p>
        		
        		<div class="form-title"></div>
        		
        		<p>
        		  <%= link_to "Editar", edit_user_registration_path(current_user), class: "button orange btn-editar" %>
        		</p>
        		
        	</div>
        
        </div>
			</div>
			
			<div class="col-lg-4 profile">
			  <div class="form-account">
			  	
				 	<div class="form-heading">
        		<h3>Mis reservas</h3>
        	</div>
        	
        	<div class="form-entry clearfix">
						<table class="table table-striped">
							<thead>
			            <th>Estacionamiento</th>
			            <th>Fecha/hora</th>
			            <th>Espacios</th>
			            <th>Horas</th>
		        	</thead>
		        	<tbody>
		        		<% @user.bookings.each do |booking| %>
		        		<tr>
			        		<td><%= booking.parking.name %></td>
			        		<td><%= booking.start_date %></td>
			        		<td><%= booking.spaces %></td>
			        		<td><%= (((booking.end_date - booking.start_date).to_i)/3600).to_s %></td>
		        		</tr>
		        		<% end %>
		        	</tbody>
						</table>
						
						<div class="form-title"></div>
						
						<p>
							<%= link_to "Nueva reserva", parking_path, class: "button orange btn-editar" %>
						</p>
					</div>
					
		 	  </div>
			</div>
		
			<div class="col-lg-4 profile">
			  <div class="form-account">
			  	
				 	<div class="form-heading">
	      		<h3>Mis estacionamientos</h3>
	      	</div>
	      	
	      	<div class="form-entry clearfix">
						<table class="table table-striped">
							<thead>
			            <th>Nombre</th>
			            <th>Desde</th>
			            <th>Hasta</th>
		        	</thead>
		        	<tbody>
		        		<% @user.parkings.each do |parking| %>
		        		<tr>
			        		<td><%= parking.name %></td>
			        		<td><%= parking.start_date %></td>
			        		<td><%= parking.end_date %></td>
		        		</tr>
		        		<% end %>
		        	</tbody>
						</table>
						
						<div class="form-title"></div>
						
						<p>
							<%= link_to "Nuevo estacionamiento", parking_new_path, class: "button orange btn-editar" %>
						</p>
					</div>
					
		 	  </div>
			</div>
			
		</div>
	</div>
</div>