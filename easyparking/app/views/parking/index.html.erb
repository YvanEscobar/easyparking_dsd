
<div class="container block-margin">
  <div class="main">
    <div class="row">
    <div class="col-lg-8">
      
      <div class="page-header clearfix">
				<h3 class="section-title">Estacionamientos</h3>
			</div>
      
      <div class="row item-grid" id="parking-list">
        <%= render @parkings %>
      </div>
      
    </div>
    
    <div class="col-lg-4">
      
      <aside id="sidebar" class="one-third column">
				
				<div class="widget-container widget_custom_search">
					
					<div class="search-heading">
							
						<h3 class="widget-title"><span>Búsqueda </span>Rápida</h3>
						
					</div><!--/ .search-heading-->
					
					<div class="search-entry clearfix">

						<%= form_tag('/parking', remote: false, :id => 'frmfilter', :class => 'form-panel') do %>
						  
						  <fieldset>
								<label for="district">¿Dónde?</label>
                <%= select_tag "district", options_from_collection_for_select(@districts, "id", "name"), class: "form-control", include_blank: "Seleccione un distrito" %>
							</fieldset>

							<fieldset>
								<label for="txtdate">¿Cuándo?</label>
                <div class='input-group date' id='dtpdate'>
                  <input type="text" id="txtdate" name="date" class="form-control">
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
							</fieldset>

							<fieldset class="not-active">
								<label for="txttime">¿A qué hora?</label>
                <div class='input-group date' id='dtptime'>
                  <input type="text" id="txttime" name="time" class="form-control">
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                  </span>
                </div>
							</fieldset>

							<fieldset>
								<label>Características</label>
                <% @features.each do |feature| %>
                <div class="checkbox">
                  <label>
                    <%= check_box_tag 'features[]', feature.id -%>
                    <%= h feature.name -%>
                  </label>
                </div>
                <% end %>
							</fieldset>

							<fieldset>
								<label for="cbopricerange">Precio</label>
								<select name="pricerange" id="cbopricerange" class="form-control">
                  <option value="0">Seleccione</option>
                  <option value="1">Menos de S/. 5.00</option>
                  <option value="2">Entre S/. 5.00 y S/. 10.00</option>
                  <option value="3">Entre S/. 10.00 y S/. 15.00</option>
                  <option value="4">Más de S/. 15.00</option>
                </select>
							</fieldset>

							<div class="clear"></div>
							
							<%= link_to 'buscar'.html_safe, '#', :class => 'btn btn-default submit-search', :onclick => "$('#frmfilter').submit()" %>

						<% end %>

					</div><!--/ .search-entry-->

				</div><!--/ .widget-container-->

			</aside>
      
    </div>
    
  </div>
  </div>
</div>


<script type="text/javascript">
  $(function () {
      $('#dtpdate').datetimepicker({
          format: 'L'
      });
      $('#dtptime').datetimepicker({
          format: 'LT'
      });
  });
</script>
