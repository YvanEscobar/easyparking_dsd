    <div class="col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <%= form_tag('/parking', remote: true) do %>
        <div class="panel-body">
          <div class="form-group">
            <label for="district">¿Dónde?</label>
            <%= select_tag "district", options_from_collection_for_select(@districts, "id", "name"), class: "form-control", include_blank: "Seleccione un distrito" %>
          </div>
          <div class="form-group">
            <label for="txtdate">¿Cuándo?</label>
            <div class='input-group date' id='dtpdate'>
              <input type="text" id="txtdate" class="form-control">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
          <div class="form-group">
            <!--
            TODO: Considerar dentro de la disponibilidad del anuncio, el horario de atención
            del estacionamiento
            -->
            <label for="txttime">¿A qué hora?</label>
            <div class='input-group date' id='dtptime'>
              <input type="text" id="txttime" class="form-control">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-time"></span>
              </span>
            </div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#dtpdate').datetimepicker({
                    format: 'L'
                });
                $('#dtptime').datetimepicker({
                    format: 'LT'
                });
            });
          </script>
        </div>
        
        <hr>
        
        <div class="panel-body">
          <label>Características</label>
          <% @features.each do |feature| %>
          <div class="checkbox">
            <label>
              <%= check_box_tag 'features[]', feature.id -%>
              <%= h feature.name -%>
            </label>
          </div>
          <% end %>
        </div>
        
        <hr>
        
        <div class="panel-body">
          <label>Precio</label>
          
