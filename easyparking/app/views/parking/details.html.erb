
<div class="container block-margin">
  <div class="row">
    <div class="col-md-6">
      <% #image_tag("placeholder.png", :alt => "placeholder", :class => "featurette-image img-responsive center-block") %>
      <%= image_tag @parking.photo.url(:medium), :alt => @parking.name, :class => "featurette-image img-responsive center-block" %>
    </div>
    <div class="col-md-5 col-md-offset-1">
      <h1><%= @parking.name %></h1>
      <div class="price">S/. <%= @parking.price_per_hour %> la hora</div>
      <p><%= @parking.description %></p>
      <h3>Características:</h3>
      <ul>
      <% @parking.parking_features.each do |feature| %>
        <li><%= feature.name %></li>
      <% end %>
      </ul>
