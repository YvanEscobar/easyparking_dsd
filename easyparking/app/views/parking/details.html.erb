      <div class="text-center">
        <%= link_to "Reservar", booking_path(@parking), {class: "btn btn-primary btn-lg", role: "button"} %>
      </div>
    </div>
  </div>
  
  <h3 class="text-center">Valoraciones y reseñas</h3>
  <hr>
  <div class="row">
    <div class="col-md-2 col-md-offset-1">
      <p>Calificación: <%= @avg_rating %>/5</p>
    </div>
    <div class="col-md-8">
      <% @parking.reviews.each do |review| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-6">
          <div class="text-right"><%= review.created_at %></div>
        </div>
      </div>
      <h5><%= review.content %></h5>
      <p><%= review.content %></p>
      
      <hr>
      <% end %>

    </div>
  </div>
  
</div>
